{
  "name": "forker",
  "version": "0.0.6",
  "private": true,
  "description": "Github action for automating fork creation",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "clean": "npm clean-install",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest --colors",
    "fork": "npm run clean && npm run build && npm run format && npm run lint && npm run package",
    "all": "npm run clean && npm run build && npm run format && npm run lint && npm run package && npm run test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wayfair-incubator/forker"
  },
  "keywords": [
    "github",
    "actions",
    "fork"
  ],
  "author": "lelia",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@octokit/rest": "20.0.2"
  },
  "devDependencies": {
    "@types/jest": "28.1.8",
    "@types/node": "17.0.45",
    "@typescript-eslint/parser": "5.62.0",
    "@vercel/ncc": "0.38.1",
    "eslint": "8.51.0",
    "eslint-plugin-github": "4.10.1",
    "eslint-plugin-jest": "27.4.2",
    "jest": "28.1.3",
    "jest-circus": "28.1.3",
    "js-yaml": "4.1.0",
    "minimist": "1.2.8",
    "prettier": "3.0.3",
    "ts-jest": "28.0.8",
    "typescript": "4.9.5"
  }
}
